# Environment Configuration Template
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://reasoning_user:reasoning_pass@localhost:5432/reasoning_db

# Alternative LLM Provider (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Configuration
DEBUG=false
LOG_LEVEL=info

# MCP Server Configuration
# The MCP server runs independently and uses the same database and API keys
# No additional configuration needed - uses existing settings above

# Docker Environment Template
# For Docker deployment, copy this to .env.docker
# OPENAI_API_KEY=your_openai_api_key_here